# Recanto da Natureza - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# GOOGLE GEMINI AI (Chat Widget)
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Get these from Firebase Console > Project Settings > General
# https://console.firebase.google.com/

VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# GOOGLE MAPS
# ============================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable: Maps JavaScript API, Places API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# GOOGLE CALENDAR API (Backend - Firebase Functions)
# ============================================
# Service Account JSON path (for server-side calendar access)
# Download from: Firebase Console > Project Settings > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey.json

# ============================================
# EMAIL CONFIGURATION (Optional - for SendGrid/SMTP)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@recantodanatureza.pt
EMAIL_OWNER=mica.orlando@hotmail.com

# ============================================
# PAYMENT GATEWAY (Future)
# ============================================
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# ============================================
# OTHER
# ============================================
NODE_ENV=development
VITE_APP_URL=http://localhost:5173
